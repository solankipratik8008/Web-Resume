@model Comment

@{
    ViewData["Title"] = "Edit Comment";
}

<h2>Edit Comment</h2>

<form method="post" asp-controller="Home" asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="text">Comment</label>
        <textarea asp-for="Text" rows="5" class="form-control" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Update Comment</button>
</form>

<a href="@Url.Action("Comment", "Home")" class="btn btn-secondary mt-3">Back to Comments</a>
