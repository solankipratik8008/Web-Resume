@{
    ViewData["Title"] = "Contact";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My Portfolio</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: 'Roboto Slab', serif;
            background-color: #121212;
            color: #ddd;
            margin: 0;
            padding: 0;
        }

        .social-links {
            list-style: none;
            padding: 0;
            display: flex;
            justify-content: center;
            gap: 20px;
        }

            .social-links li {
                display: inline-block;
            }

            .social-links a {
                color: white;
                font-size: 24px;
                transition: color 0.3s;
            }

                .social-links a:hover {
                    color: rebeccapurple;
                }

        .sidebar a {
            color: white;
            text-decoration: none;
            font-size: 18px;
            padding: 12px 20px;
            display: flex;
            align-items: center;
            gap: 15px;
            border-radius: 8px;
            transition: all 0.3s ease-in-out;
            background: #222;
        }

            .sidebar a i {
                font-size: 20px;
            }

            .sidebar a:hover {
                background: white;
                transform: scale(1.05);
            }

            .sidebar a.active {
                background: white;
                color: black;
                font-weight: bold;
                transform: scale(1.05);
            }


        header {
            background-color: #222;
            padding: 20px;
            color: white;
            text-align: center;
        }

        .contact-container {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px;
        }

        .contact-details {
            background-color: #222;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            max-width: 600px;
            width: 100%;
        }

            .contact-details h2 {
                text-align: center;
                font-size: 2em;
                margin-bottom: 20px;
                color: mediumpurple;
            }

        .contact-item {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            font-size: 1.1em;
            color: #ddd;
        }

            .contact-item i {
                font-size: 20px;
                margin-right: 15px;
                color: mediumpurple;
            }

            .contact-item a {
                color: mediumpurple;
                text-decoration: none;
                font-weight: bold;
                transition: all 0.3s ease-in-out;
            }

                .contact-item a:hover {
                    color: #ffffff;
                    text-decoration: underline;
                    transform: scale(1.05); /* Hover effect */
                }

        footer {
            text-align: center;
            padding: 20px;
            background-color: #222;
            color: white;
        }

        .contact-item {
            display: flex;
            align-items: center;
            margin-bottom: 15px; 
        }

            .contact-item i {
                margin-right:20px; 
            }

            .contact-item a {
                text-decoration: none;
                color: #fff;
                font-size: 1.1em;
                transition: color 0.3s;
            }

                .contact-item a:hover {
                    color: #4CAF50; 
                }

    </style>
</head>

<body>
    <header>
        <h1>Contact Me</h1>
    </header>

    <main>
        <div class="contact-container">
            <div class="contact-details">
                <h2>Get In Touch</h2>

                <i class="fas fa-envelope"></i><div class="contact-item">
                    <a href="mailto:pratikkumar.solanki@example.com">pratikkumar.solanki@example.com</a>
                </div>

                <i class="fas fa-phone"></i> <div class="contact-item">
                    <a href="tel:+15483848008">+1 548-384-8008</a>
                </div>

                <i class="fab fa-linkedin"></i><div class="contact-item">
                    <a href="https://www.linkedin.com/in/pratikkumar-solanki/" target="_blank">LinkedIn Profile</a>
                </div>

                <i class="fab fa-github"></i> <div class="contact-item">
                    <a href="https://github.com/pratikkumar-solanki" target="_blank">GitHub Profile</a>
                </div>
            </div>
        </div>
    </main>



    <footer>
        <p>&copy; 2025 Pratikkumar Solanki. All Rights Reserved.</p>
    </footer>

</body>

</html>
